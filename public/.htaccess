# Active le moteur de réécriture pour le front controller
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Si le fichier ou le répertoire existe, le servir directement
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Sinon, redirige toutes les requêtes vers index.php
    # en conservant le chemin dans le paramètre d’URL 'url'
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>

# Sécurité : désactiver l’indexation des répertoires
Options -Indexes
