# Active le moteur de réécriture pour le front controller
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Si le fichier ou le répertoire existe, le servir directement
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Redirige toutes les requêtes vers le front controller (public/index.php)
    # L’URL réelle est conservée dans REQUEST_URI et traitée par le Router PHP
    RewriteRule ^ index.php [L]

</IfModule>

# Sécurité : désactiver l’indexation des répertoires
Options -Indexes
